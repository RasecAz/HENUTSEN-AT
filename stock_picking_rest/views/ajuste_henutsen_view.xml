<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ajuste_henutsen_tree" model="ir.ui.view">
        <field name="name">ajuste.henutsen.tree</field>
        <field name="model">ajuste.henutsen</field>
        <field name="arch" type="xml">
            <tree string="Ajuste">
                <field name="idAjuste"/>
                <field name="location"/>
            </tree>
        </field>
    </record>


    <record id="view_ajuste_henutsen_form" model="ir.ui.view">
        <field name="name">ajuste.henutsen.form</field>
        <field name="model">ajuste.henutsen</field>
        <field name="arch" type="xml">
            <form string="Ajuste">
                <sheet>
                    <group>
                        <field name="idAjuste"/>
                        <field name="location"/>
                    </group>
                    <notebook>
                        <page string="Productos">
                            <field name="productList">
                                <tree>
                                    <field name="nameProd"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="ajuste_henutsen_form" model="ir.actions.act_window">
        <field name="name">Ajustes de Inventario Henutsen</field>
        <field name="res_model">ajuste.henutsen</field>
        <field name="view_mode">tree,form</field>

    </record>
    <!-- MenÃº -->
    <menuitem 
        id="menu_action_inventory_tree" 
        name="Ajuste Henutsen" 
        parent="stock.menu_stock_adjustments" 
        sequence="10" 
        action="ajuste_henutsen_form"/>

</odoo>
